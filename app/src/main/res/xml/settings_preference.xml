<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="setting_activity_top_title ">

    <PreferenceCategory
        android:key="security_header"
        android:title="보안 설정">

        <Preference
            android:key="pref_key_passcode_toggle"
            android:persistent="false"
            android:title="잠금 설 정">
        </Preference>

        <Preference
            android:key="pref_key_change_passcode"
            android:persistent="false"
            android:title="잠금 끄기" >
        </Preference>

    </PreferenceCategory>

    <PreferenceCategory
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:key="setting_activity_pushalarm"
        android:title="알림 설정">

        <CheckBoxPreference
            android:key="setting_activity_autoalarm"
            android:title="자동알림"
            android:summary="어플리케이션 알림이 종료된 경우 자동으로 재실행"
            android:defaultValue="true"/>

        <CheckBoxPreference
            android:key="setting_activity_alarm_reiceive"
            android:title="알림설정"
            android:defaultValue="true"/>

    </PreferenceCategory>


    <PreferenceCategory
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:key="setting_activity_account"
        android:title="어플 정보">

        <Preference
            android:key="setting_activity_id"
            android:title="어플케이션 이름"
            android:summary="qwerty" />

        <Preference
            android:key="setting_activity_app_version"
            android:title="어플 버전"
            android:summary="qwerty" />

        <Preference
            android:key="setting_activity_Developer_email"
            android:summary="개발자에게 메일을 보냅니다."
            android:title="메일 보내기">
        </Preference>

    </PreferenceCategory>

</PreferenceScreen>